<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Estilo_Title">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Estilo_subTitle">
        <item name="android:fontFamily">@font/courgette</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Estilo_Contenido">
        <item name="android:fontFamily">@font/kaushan_script</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
